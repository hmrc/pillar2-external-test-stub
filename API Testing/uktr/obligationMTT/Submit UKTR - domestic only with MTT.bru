meta {
  name: Submit UKTR - domestic only with MTT
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/RESTAdapter/PLR/UKTaxReturn
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  X-Pillar2-Id: {{domesticOnlyPlrId}}
  Authorization: validBearerToken
}

body:json {
  {
    "accountingPeriodFrom": "2024-08-14",
    "accountingPeriodTo": "2024-12-14",
    "obligationMTT": true,
    "electionUKGAAP": false,
    "liabilities": {
      "electionDTTSingleMember": false,
      "electionUTPRSingleMember": false,
      "numberSubGroupDTT": 4,
      "numberSubGroupUTPR": 5,
      "totalLiability": 10000.99,
      "totalLiabilityDTT": 5000.99,
      "totalLiabilityIIR": 4000,
      "totalLiabilityUTPR": 1000,
      "liableEntities": [
        {
          "ukChargeableEntityName": "New Company",
          "idType": "CRN",
          "idValue": "1234",
          "amountOwedDTT": 5000.99,
          "amountOwedIIR": 4000,
          "amountOwedUTPR": 1000
        }
      ]
    }
  }
}

assert {
  res.body.errors: isDefined
  res.body.errors.code: eq "093"
  res.body.errors.text: eq "obligationMTT cannot be true for a domestic-only group"
  res.status: eq 422
} 