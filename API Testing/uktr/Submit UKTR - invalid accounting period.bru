meta {
  name: 6. Submit UKTR - Invalid Accounting Period Error
  type: http
  seq: 6
}

post {
  url: {{baseUrl}}/RESTAdapter/PLR/UKTaxReturn
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  Authorization: {{validBearerToken}}
  X-Pillar2-Id: {{domesticOnlyPlrId}}
}

body:json {
  {
    "accountingPeriodFrom": "2024-04-01",
    "accountingPeriodTo": "2024-06-30",
    "obligationMTT": false,
    "electionUKGAAP": false,
    "liabilities": {
      "electionDTTSingleMember": false,
      "electionUTPRSingleMember": false,
      "numberSubGroupDTT": 1,
      "numberSubGroupUTPR": 0,
      "totalLiability": 5000.99,
      "totalLiabilityDTT": 5000.99,
      "totalLiabilityIIR": 0,
      "totalLiabilityUTPR": 0,
      "liableEntities": [
        {
          "ukChargeableEntityName": "Domestic Test Company",
          "idType": "CRN",
          "idValue": "1234",
          "amountOwedDTT": 5000.99,
          "amountOwedIIR": 0,
          "amountOwedUTPR": 0
        }
      ]
    }
  }
}

assert {
  res.status: eq 422
  res.body.errors: isDefined
  res.body.errors.code: eq "003"
  res.body.errors.text: eq "Accounting period (2024-04-01 to 2024-06-30) does not match the registered period (2024-01-01 to 2024-03-31)"
} 